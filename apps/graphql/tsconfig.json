{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "es2019",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*"
  ]  
}