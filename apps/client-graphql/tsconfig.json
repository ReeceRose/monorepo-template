{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/styles/*": ["styles/*"],
      "@/layouts/*": ["layouts/*"],
      "@/generated/*": ["generated/*"],
      "@/graphql/*": ["graphql/*"],
      "@/testing/*": ["__tests__/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}